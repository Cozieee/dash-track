{
  "manifest_version": 2,
  "name": "DashTrack",
  "description": "Track and log your favorite restaurants on DoorDash and eventually others",
  "version": "1.0.0",
  "icons": { "128": "images/dash-track-icon.png" },
  "web_accessible_resources": ["images/*"],
  "browser_action": {
    "default_icon": "images/dash-track-icon.png"
  },
  "background": {
    "scripts": ["src/dashboard/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.doordash.com/*",
        "https://www.ubereats.com/*",
        "https://www.grubhub.com/*"
      ],
      "css": [
        "src/thirdParty/materialize.min.css",
        "src/vendorScripts/components/styles.css"
      ],
      "js": [
        "src/thirdParty/jquery-3.5.1.min.js",
        "src/thirdParty/materialize.min.js",
        "src/storageCursors.js",
        "src/vendorScripts/components/pageFavoriteButton.js"
      ]
    },
    {
      "matches": ["https://www.doordash.com/*"],
      "js": ["src/vendorScripts/doordash.js"]
    },
    {
      "matches": ["https://www.ubereats.com/*"],
      "js": ["src/vendorScripts/ubereats.js"]
    },
    {
      "matches": ["https://www.grubhub.com/*"],
      "js": ["src/vendorScripts/grubhub.js"]
    }
  ],
  "permissions": ["storage", "tabs"]
}
