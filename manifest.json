{
  "manifest_version": 2,
  "name": "DashTrack",
  "description": "Track and log your favorite restaurants on DoorDash and eventually others",
  "version": "1.0.0",
  "icons": { "128": "images/icon-128.png" },
  "web_accessible_resources": ["images/*"],
  "content_scripts": [
    {
      "matches": [
        "https://www.doordash.com/*",
        "https://www.ubereats.com/*",
        "https://www.grubhub.com/*"
      ],
      "css": [
        "src/thirdParty/materialize.min.css",
        "experiments/materialize-button/custom.css"
      ],
      "js": [
        "src/thirdParty/jquery-3.5.1.min.js",
        "src/thirdParty/materialize.min.js"
      ]
    },
    {
      "matches": ["https://www.doordash.com/*"],
      "js": [
        "experiments/materialize-button/renderFavoriteButton.js",
        "experiments/materialize-button/content-script.js"
      ]
    },
    {
      "matches": ["https://www.ubereats.com/*"],
      "js": ["src/favorite-button/ubereats.js"]
    },
    {
      "matches": ["https://www.grubhub.com/*"],
      "js": ["src/favorite-button/grubhub.js"]
    }
  ],
  "permissions": ["storage", "tabs"]
}
