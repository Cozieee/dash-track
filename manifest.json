{
  "manifest_version": 2,
  "name": "DashTrack",
  "description": "Track and log your favorite restaurants on DoorDash and eventually others",
  "version": "1.0.0",
  "icons": { "128": "images/icon-128.png" },
  "background": [
    {
      "scripts": ["experiments/favorite-button/background.js"],
      "persistent": false
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.doordash.com/store/*"],
      "css": ["scripts/thirdParty/bootstrap.min.css"],
      "js": [
        "scripts/thirdParty/jquery-3.5.1.min.js",
        "scripts/thirdParty/bootstrap.min.js",
        "scripts/favorite-button/content-script.js"
      ]
    }
  ],
  "permissions": ["storage"]
}